<project default="clean-compile" basedir=".">

	<property name="build.dir" value="bin" />
	<property name="src.dir" value="src" />
	<property name="lib.dir" value="lib" />
	<property name="dist.dir" value="dist" />
	<property name="xtext.lib.dir" value="../../lib" />
	<property name="xtext.project.bin.dir" value="../es.fap.simpleled/bin" />
	
	<path id="classpath">
		<fileset dir="${lib.dir}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${xtext.lib.dir}">
			<include name="**/*.jar" />
		</fileset>
		<pathelement path="${xtext.project.bin.dir}"/>
	</path>

	<taskdef name="groovyc" classname="org.codehaus.groovy.ant.Groovyc" classpathref="classpath" />

	<target name="clean">
		<delete dir="${build.dir}" />
	</target>

	<target name="compile">
		<mkdir dir="${build.dir}" />
		<javac srcdir="src" destdir="${build.dir}" includeantruntime="true" encoding="utf-8"/>

		<groovyc srcdir="${src.dir}" destdir="${build.dir}" encoding="utf-8">
			<classpath>
				<path refid="classpath" />
			</classpath>
			<javac source="1.5" target="1.5" debug="on" />
		</groovyc>
		
		<copy todir="${build.dir}">
		    <fileset dir="${src.dir}">
		    	<include name="**/*.mwe2"/>
		    	<include name="**/*.xpt"/>
		    	<include name="**/*.ext"/>
			</fileset>
		</copy>
		
	</target>

	<target name="clean-compile">
		<antcall target="clean" />
		<antcall target="compile" />
	</target>
	
	<target name="dist">
		<antcall target="clean-compile" />
		<delete dir="${dist.dir}"/>
		<mkdir dir="${dist.dir}"/>
		<jar destfile="${dist.dir}/es.fap.simpleled.generator.jar" basedir="${build.dir}"/>
	</target>
	
</project>
